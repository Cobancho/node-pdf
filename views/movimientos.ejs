<style>
	.header {
		margin-bottom: 2rem;
		text-align: center;
	}

	.pageTitle {
		font-size: 1.5rem; /* Adjusting the font size for the header text */
		font-weight: 900;
		margin-bottom: 0.5rem;
	}

	.table-container {
		margin: 2rem;
	}

	.table {
		width: 100%;
		border-collapse: collapse;
	}

	.table th {
		border-bottom: 1px solid #000; /* Removing horizontal lines for the heading */
		background-color: #ccc;
		padding: 0.5rem;
		text-align: center;
		font-size: 1rem; /* Adjusting the font size for the header cells */
		text-transform: capitalize; /* Capitalizing the whole string in the header */
	}

	.table td {
		border-bottom: 1px solid #000;
		padding: 0.2rem 0.5rem;
		text-align: center;
		font-size: 0.75rem;
	}

	.table tr:nth-child(even) {
		background-color: #ddd;
	}

	.table tr:nth-child(odd) {
		background-color: #fff;
	}
</style>

<section class="header">
	<h1 class="pageTitle">Maika</h1>
</section>

<div class="table-container">
	<table class="table">
		<thead>
			<tr>
				<th>Fecha</th>
				<th>Sucursal</th>
				<th>Operador</th>
				<th>Cliente</th>
				<th>Detalle</th>
				<th>Medio</th>
				<th>Divisa</th>
				<th>Entrada</th>
				<th>Salida</th>
			</tr>
		</thead>
		<tbody>
			<% for (let i = 0; i < data.length; i++) { %>
			<tr>
				<td><%= data[i].fecha %></td>
				<td><%= data[i].sucursal.charAt(0).toUpperCase() + data[i].sucursal.slice(1) %></td>
				<td><%= data[i].operador %></td>
				<td><%= data[i].cliente %></td>
				<td><%= data[i].tipo.charAt(0).toUpperCase() + data[i].tipo.slice(1) + ' Nro ' + data[i].transaccion_id %></td>
				<td><%= data[i].medio %></td>
				<td><%= data[i].divisa.toUpperCase() %></td>
				<td><% if (data[i].entrada) { %>$<%= formatNumber(data[i].entrada) %><% } %></td>
				<td><% if (data[i].salida) { %>$<%= formatNumber(data[i].salida) %><% } %></td>
			</tr>
			<% } %>
		</tbody>
	</table>
</div>
